<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <link rel="stylesheet" type="text/css" href="css/style.css" />

    <title>Mini Projeto SVG</title>
</head>
<body>



    <div class="container" id="header">
        <div class="row">
            <div class="col-sm">
                <img id="logo" src="https://www.ifpb.edu.br/imagens/logos/campus-cajazeiras">
            </div>
            <div class="col-sm">

                <p class="lead">
                    Análise e Desenvolvimento de Sistemas<br>
                    Bancos de Dados II - 2020.2<br>
                    Mini Projeto - SVG<br>
                    Michel Moreira
                </p>
            </div>
        </div>
    </div>


    <form method="POST" action="/submit">
        <div class="input-group mb-3">
            <span class="input-group-text" id="basic-addon1"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Informe uma cidade do Brasil" aria-describedby="basic-addon1" id="input" name="nome">
        </div>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <button class="btn btn-primary btn-dark me-md-2" type="submit" id="submit">Enviar</button>
        </div>
    </form>

    <% data.forEach(function(dt) { %>
        <div class="accordion" id="municipios">
            <div class="accordion-item">
                <h2 class="accordion-header" id="<%= dt.munome.split(" ").join("") + dt.siglauf %>">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#<%= dt.munome.split(" ").join("")+ dt.cod %>" aria-expanded="false" aria-controls="<%= dt.munome.split(" ").join("")+ dt.cod %>">
                        <i class="bi bi-geo-alt icone"></i><%= dt.munome %> - <%= dt.estnome %>
                    </button>
                </h2>
                <div id="<%= dt.munome.split(" ").join("")+ dt.cod %>" class="accordion-collapse collapse" aria-labelledby="<%= dt.munome.split(" ").join("")+ dt.siglauf %>" data-bs-parent="#municipios">
                    <div class="accordion-body">

                        <div class="container">
                            <div class="row">
                                <div class="col-sm">
                                    <ul class="list-group list-group-horizontal">
                                        <li class="list-group-item titulo">População</li>
                                        <li class="list-group-item"><%= dt.populacao %> habitantes</li>
                                    </ul>
                                    <ul class="list-group list-group-horizontal">
                                        <li class="list-group-item titulo">Área</li>
                                        <li class="list-group-item"><%= dt.area %> km²</li>
                                    </ul>
                                </div>
                                <div class="col-sm">
                                    <svg id="vb" width="300" height="300" viewBox="<%= dt.viewbox %>">
                                        <path id="estado" d="<%= dt.estsvg %>"/>
                                        <path id="municipio" d="<%= dt.munsvg %>"/>
                                </div>
                            </div>
                        </div>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>

</body>
</html>